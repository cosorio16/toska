---
import Cart from "../../icons/Cart.astro";
import User from "../../icons/User.astro";
---

<header
  class="flex items-center px-40 py-2 justify-between min-h-16 border-b bg-black text-white"
>
  <nav class="flex items-center gap-10 min-w-fit grow">
    <a href="#">
      <img
        src="/images/logo.png"
        alt=""
        class="w-14 rounded-full aspect-square"
      /></a
    >
    <ul class="flex items-center gap-8 text-xl">
      <li class="min-w-24 px-4 text-center"><a href="#">Shop</a></li>
      <li class="min-w-24 px-4 text-center"><a href="#">MÃ¡s Vendidos</a></li>
      <li class="min-w-24 px-4 text-center"><a href="#">Lo nuevo</a></li>
    </ul>
  </nav>
  <nav class="flex items-center gap-8">
    <button>
      <Cart sizes="30" />
    </button>
    <button>
      <User sizes="30" />
    </button>
  </nav>
</header>

<style>
  li {
    position: relative;
  }

  li:hover a {
    color: #55a4ff;
  }

  li::after {
    position: absolute;
    width: 100%;
    content: " ";
    height: 1px;
    border-radius: 18px;
    background-color: #55a4ff;
    opacity: 0;
    top: calc(100% + 20px);
    left: 0;
    transform: translateY(-10px);
    transition: all 0.323s cubic-bezier(0.455, 0.03, 0.515, 0.955);
  }

  li:hover::after {
    height: 5px;
    opacity: 1;
    transform: translateY(0px);
  }
</style>
