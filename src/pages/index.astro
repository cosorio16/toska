---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Banner from "../components/Banner.astro";
import Grid from "../components/Grid.astro";
---

<Layout title="Toska - Inicio">
  <Header />
  <main class="flex flex-col gap-5 px-40">
    <Hero />
    <section class="flex flex-col gap-10 py-10">
      <h1 class="flex items-center gap-2 text-3xl font-medium">
        <span class="w-16 bg-zinc-500 h-0.5"></span>
        Collection
      </h1>
      <div class="grid grid-cols-3 gap-20 items-center justify-items-center">
        <Card image="/images/addiktion.jpg" title="addiKtion Tshirt" />
        <Card image="/images/caktus.jpeg" title="caKtus Tshirt" />
        <Card image="/images/sKater.jpg" title="sKater Tshirt" />
      </div>
    </section>
    <section>
      <Banner />
    </section>
    <section>
      <Grid />
    </section>
  </main>
</Layout>
