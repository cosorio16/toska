---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
---

<Layout title="Inicio">
  <Header />
  <main>
    <Hero />
    <section class="px-40 flex flex-col gap-10 py-10" >
      <h1 class="flex items-center gap-2 text-xl font-medium">
        <span class="w-20 bg-black h-0.5"></span>
        Collection
      </h1>
      <div
        class="grid grid-cols-3 gap-20 items-center justify-items-center"
      >
        <Card image="/images/addiktion.jpg" />
        <Card image="/images/caktus.jpeg" />
        <Card image="/images/sKater.jpg" />
      </div>
    </section>
  </main>
</Layout>
